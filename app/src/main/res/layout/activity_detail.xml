<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shinhan.kdh1.myrealestate.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d8d8e4"
        android:gravity="center_horizontal">

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:stretchColumns="0">

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="시-구:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_location_gu"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="구역:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_location_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="투자금액:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_tot_amt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="평가금액:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_original_amt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="프리미엄:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_premium"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="현임대차:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_rent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="융자금액:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_loan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="이주비:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_moving"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="연락처:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_telno"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textSize="20sp" />
            </TableRow>

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="단위:만원"
                android:textSize="10sp" />

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화걸기"
            android:textSize="17sp"
            android:textColor="#fcfbfd"
            android:background="#2305c1"
            android:onClick="telno"/>

    </LinearLayout>

</LinearLayout>
