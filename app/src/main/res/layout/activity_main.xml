            <Button
                android:id="@+id/ButtonHome"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="25"
                android:textColor="#02033e"
                android:textSize="17dp"
                android:text="HOME" />
            <Button
                android:id="@+id/ButtonOfferRegister"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="25"
                android:textColor="#02033e"
                android:textSize="17dp"
                android:text="매물등록" />
